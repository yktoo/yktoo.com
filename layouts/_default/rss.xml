{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\" ?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{ .Site.Title }} | {{ T "blog" }}: {{ T "postsCurLang" }}</title>
        <link>{{ .Permalink }}</link>
        <description>{{ .Site.Title }} blog</description>
        <generator>Hugo {{ hugo.Version }}</generator>
        {{ with .Site.LanguageCode }}<language>{{ . }}</language>{{ end }}
        {{- with .Site.Params.author -}}
        <managingEditor>noreply@yktoo.com ({{ . }})</managingEditor>
        <webMaster>noreply@yktoo.com ({{ . }})</webMaster>
        {{- end -}}
        {{ with .Site.Copyright }}<copyright>{{ . }}</copyright>{{ end }}
        {{ if not .Date.IsZero }}<lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end -}}
        {{ with .OutputFormats.Get "RSS" }}{{ printf `<atom:link href=%q rel="self" type=%q />` .Permalink .MediaType | safeHTML }}{{ end -}}
        {{ range first .Site.Params.rssLimit (where .Site.RegularPages "Type" "post") -}}
        <item>
            <title>{{ with .Params.series }}{{ . }} â€£ {{ end }}{{ .Title }}</title>
            <link>{{ .Permalink }}</link>
            <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
            <author>noreply@yktoo.com ({{ .Params.author | default .Site.Params.author }})</author>
            <guid isPermaLink="true">{{ .Permalink }}</guid>
            <description>
                <!-- If there's an image given -->
                {{- $page := . -}}
                {{- with .Params.image -}}
                    {{- $url := . -}}
                    <!-- If it isn't a URL starting with "http(s)://", consider it a page resource -->
                    {{- if not (or (hasPrefix $url "http://") (hasPrefix $url "https://")) -}}
                        {{- $url = ($page.Resources.GetMatch $url).Permalink -}}
                    {{- end -}}
                    <!-- Insert image tag -->
                    {{- with $url -}}
                        {{- printf `<img style="width: 500px; height: auto;" src=%q alt="Post image"><br><br>` . -}}
                    {{- end -}}
                {{- end -}}
                <!-- Put post summary or description -->
                {{- with .Params.description }}
                {{- . | markdownify | htmlEscape }}
                {{- else }}
                {{- .Summary | plainify -}}
                {{- end }}
                <!-- Read On link -->
                {{- printf `<hr><p><a href=%q style="padding: 6px; background-color: #089664; color: #ffffff;">%s</a></p>` .Permalink (T "readOn") -}}
            </description>
        </item>
        {{ end -}}
    </channel>
</rss>
